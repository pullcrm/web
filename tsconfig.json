{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vue/ref-macros"
    ],
    "paths": {
      "~/*": [
        "docs/.vitepress/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}
