{
  "name": "example",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=14.15.4",
    "yarn": ">=1.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix --ignore-path .gitignore --ignore-path .eslintignore",
    "*.{vue,scss,css}": "stylelint --fix"
  },
  "scripts": {
    "dev": "vite-ssr --port 3001 --open",
    "dev:spa": "vite --port 3001 --open",
    "build": "rm -rf dist && vite-ssr build",
    "start": "node ../server/index",
    "lint:js": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint:js:fix": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint:css": "stylelint 'src/**/*.{vue,scss,css}'",
    "lint:css:fix": "stylelint 'src/**/*.{vue,scss,css}' --fix",
    "lint": "yarn lint:js && yarn lint:css"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/server-renderer": "^3.2.26",
    "@vueuse/core": "^8.5.0",
    "@vueuse/head": "^0.7.6",
    "animated-scroll-to": "^2.2.0",
    "dayjs": "^1.11.2",
    "husky": "^4.2.5",
    "isomorphic-base64": "^1.0.2",
    "isomorphic-unfetch": "^3.1.0",
    "lint-staged": "^13.0.0",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "postcss": "^8.4.14",
    "sass": "^1.52.1",
    "vite": "2.9.9",
    "vite-ssr": "^0.16.0",
    "vue": "^3.2.36",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.24.2",
    "@intlify/vite-plugin-vue-i18n": "^4.0.0",
    "@types/lodash": "^4.14.182",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "stylelint": "13.9.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-prettier": "1.1.2",
    "stylelint-scss": "3.18.0",
    "typescript": "^4.7.2",
    "unplugin-auto-import": "^0.8.5",
    "unplugin-vue-components": "^0.19.6",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vue-tsc": "^0.34.16"
  }
}
